<div class="container" id="confirm-remove"></div>
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between aling-items-center">
                <h2>{{image.title}}</h2>
                <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
                    <i class="fa fa-times"></i> <span>Delete</span>
                </button>
            </div>
            <div class="card-body">
                <p>{{image.description}}</p>
                <div class="text-center">
                    <img src="/public/upload/{{image.filename}}" alt="" class="img-fluid">
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <form action="/images/{{image.uniqueId}}/like" method="post">
                    <button class="btn btn-success" id="like-button">
                        <i class="fas fa-thumbs-up"></i> Like
                    </button>
                </form>
                <p>
                    <span class="likes-count" id="likes"></span>
                    <i class="fas fa-heart" style="color:gray" id="heart">{{image.likes}}</i>
                </p>
                <p>
                    <i class="fas fa-eye"></i> {{image.views}}
                </p>
                <p>
                    <i class="far fa-clock"></i> {{timeago image.timestamp}}
                </p>
            </div>
        </div>

        <div class="card mt-2">
            <div class="card-header d-flex justify-content-between aling-items-center bg-dark text-white">
                <h3>Comments</h3>
                <button class="btn btn-info" id="btn-toggle-comment">
                    <i class="fa fa-comment-o"></i> Post a Comment
                </button>
            </div>
            <div class="card-body">
                <blockquote id="post-comment">
                    <form action="/images/{{image.uniqueId}}/comment" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <textarea name="comment" rows="2" class="form-control" placeholder="Your Comment"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success" id="btn-comment">
                                <i class="fa fa-comment"></i> Post
                            </button>
                        </div>
                    </form>
                </blockquote>
                <ul class="list-group p-4">
                    {{#each comments}}
                        <li class="list-group-item">
                            <div class="row">
                                <a href="#" class="col text-center">
                                    <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
                                </a>
                                <blockquote class="col">
                                    <p class="lead">{{comment}}</p>
                                    <footer class="blockquote-footer">
                                        {{name}} - {{timeago timestamp}}
                                    </footer>
                                </blockquote>
                            </div>
                        </li>
                    {{/each}}

                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        {{> stats}}
        {{> popular}}
        {{> comments}}
    </div>
</div>
